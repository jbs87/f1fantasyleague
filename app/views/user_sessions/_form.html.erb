<div class="row">
    <div class="medium-1 large-1 columns add-height"></div>
    <div class="medium-3 large-3 columns">


<%= form_tag user_sessions_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Login", :class => "button round"  %>
  </div>
<% end %>

</div>
<div class="medium-8 large-8 columns add-height"></div>
</div>